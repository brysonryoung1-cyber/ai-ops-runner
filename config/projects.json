{
  "$schema": "./projects.schema.json",
  "version": 1,
  "projects": [
    {
      "id": "infra_openclaw",
      "name": "OpenClaw Infrastructure",
      "description": "Core infrastructure: doctor, guard, heal, deploy, console, notifications",
      "enabled": true,
      "workflows": [
        "doctor",
        "apply",
        "guard",
        "heal",
        "deploy",
        "nightly",
        "deploy_and_verify"
      ],
      "schedules": [
        {
          "workflow": "doctor",
          "cron": "0 * * * *",
          "label": "Hourly health check"
        },
        {
          "workflow": "guard",
          "cron": "*/10 * * * *",
          "label": "10-min safety guard"
        },
        {
          "workflow": "nightly",
          "cron": "0 2 * * *",
          "label": "Nightly ORB jobs"
        }
      ],
      "notification_flags": {
        "on_success": false,
        "on_failure": true,
        "on_recovery": true,
        "channels": [
          "pushover",
          "sms"
        ]
      },
      "tags": [
        "infrastructure",
        "active",
        "production"
      ]
    },
