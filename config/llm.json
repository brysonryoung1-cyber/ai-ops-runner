{
  "$schema": "./llm.schema.json",
  "enabledProviders": [
    "openai",
    "mistral"
  ],
  "defaults": {
    "general": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    },
    "review": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    },
    "vision": {
      "provider": "openai",
      "model": "gpt-4o"
    }
  },
  "reviewFallback": {
    "provider": "mistral",
    "model": "labs-devstral-small-2512"
  },
  "budget": {
    "maxUsdPerReview": 0.5,
    "maxUsdPerRun": 5.0,
    "pricing": {
      "gpt-4o-mini": {
        "inputPer1M": 0.15,
        "outputPer1M": 0.6
      },
      "gpt-4o": {
        "inputPer1M": 2.5,
        "outputPer1M": 10.0
      },
      "codestral-2501": {
        "inputPer1M": 0.3,
        "outputPer1M": 0.9
      },
      "codestral-2508": {
        "inputPer1M": 0.3,
        "outputPer1M": 0.9
      },
      "labs-devstral-small-2512": {
        "inputPer1M": 0.1,
        "outputPer1M": 0.3
      }
    }
  },
  "reviewCaps": {
    "maxOutputTokens": 600,
    "temperature": 0
  },
  "providers": {
    "openai": {
      "apiBase": "https://api.openai.com/v1",
      "keySource": "existing_secret_store"
    },
    "mistral": {
      "apiBase": "https://api.mistral.ai/v1",
      "keyEnv": "MISTRAL_API_KEY",
      "enabled": true
    },
    "moonshot": {
      "apiBase": "https://api.moonshot.cn/v1",
      "keyEnv": "MOONSHOT_API_KEY",
      "enabled": false
    },
    "ollama": {
      "apiBase": "http://127.0.0.1:11434",
      "enabled": false
    }
  }
}